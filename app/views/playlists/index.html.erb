    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="playlist_form">
        <%= render "shared/playlist_form" %>
      </section>
    </aside>
    <div class="col-md-8 text-center">
      <h3 class="mx-auto text-danger font-weight-bold w-50 py-2">Playlist</h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% end %>
