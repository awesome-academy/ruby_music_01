<div class="row">
  <div class="col-md-6 col-md-offset-3 mx-auto">
    <h1 class="text-white"><%= t ".sign-up" %></h1>
    <%= form_for @user, url: signup_path do |f| %>
      <%= render  "shared/error_messages", object: f.object %>

      <%= f.label :name, class: "text-white" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "text-white" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, class: "text-white" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, "Confirmation", class: "text-white" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t(".create-account"), class: "btn btn-success" %>
    <% end %>
  </div>
</div>
